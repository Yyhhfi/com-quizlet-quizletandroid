<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feedback_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/studymode_standard_margin"
    android:layout_marginRight="@dimen/studymode_standard_margin"
    android:layout_marginBottom="@dimen/studymode_standard_margin"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/question_diagram_elevation"
    app:cardUseCompatPadding="false">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="?attr/SysColorCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/feedback_titlebar"
                android:padding="@dimen/assistant_feedback_content_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/textColorInverse"
                    android:id="@+id/feedback_titlebar_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_centerVertical="true"
                    android:importantForAccessibility="no"
                    style="@style/Header.H2"/>
                <com.quizlet.partskit.widgets.QTextView
                    android:textColor="?attr/textColorInverse"
                    android:ellipsize="end"
                    android:id="@+id/feedback_titlebar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/assistant_feedback_content_margin"
                    android:layout_marginRight="@dimen/assistant_feedback_content_margin"
                    android:maxLines="1"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/assistant_feedback_content_margin"
                    android:layout_toStartOf="@+id/feedback_chevron"
                    android:layout_toEndOf="@+id/feedback_titlebar_emoji"
                    style="@style/SubHeader.S5"/>
                <ImageView
                    android:id="@+id/feedback_chevron"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sys_caret_up"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/la_feedback_chevron_up_content_description"
                    android:layout_alignParentEnd="true"
                    app:tint="?attr/AssemblyGray100"/>
            </RelativeLayout>
            <ScrollView
                android:id="@+id/la_feedback_scroll_view"
                android:fadingEdgeLength="@dimen/fading_edge_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/assistant_feedback_continue_button_height"
                android:fillViewport="true"
                android:requiresFadingEdge="vertical">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/top_feedback_section"
                        android:paddingLeft="@dimen/assistant_feedback_content_margin"
                        android:paddingTop="@dimen/assistant_feedback_section_margin"
                        android:paddingRight="@dimen/assistant_feedback_content_margin"
                        android:paddingBottom="@dimen/assistant_feedback_section_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/feedback_sections_divider"
                        android:background="?attr/dividerColor"
                        android:visibility="gone"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        style="@style/SettingsDivider"/>
                    <RelativeLayout
                        android:id="@+id/bottom_feedback_section_wrapper"
                        android:paddingLeft="@dimen/assistant_feedback_content_margin"
                        android:paddingTop="@dimen/assistant_feedback_section_margin"
                        android:paddingRight="@dimen/assistant_feedback_content_margin"
                        android:paddingBottom="@dimen/assistant_feedback_section_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:id="@+id/bottom_feedback_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/feedback_extra_action"/>
                        <com.quizlet.partskit.widgets.QTextView
                            android:textColor="?attr/textColorAccent"
                            android:id="@+id/feedback_extra_action"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/la_feedback_show_more_button"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            style="@style/SubHeader.S5"/>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <com.quizlet.assembly.widgets.buttons.AssemblyPrimaryButton
            android:layout_gravity="bottom"
            android:id="@+id/feedback_continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ref_spacing_small"
            app:text="@string/feedback_continue_button"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>
