<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/whatsapp_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_set_whatsapp"
        android:contentDescription="@string/share_set_whatsapp_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/SysColorTextSecondary"/>
    <TextView
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/share_set_whatsapp_button_text"
        android:lineSpacingExtra="2sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/whatsapp_icon"
        app:layout_constraintStart_toStartOf="@+id/whatsapp_icon"
        app:layout_constraintTop_toBottomOf="@+id/whatsapp_icon"
        style="@style/SubHeader.S5"/>
</androidx.constraintlayout.widget.ConstraintLayout>
