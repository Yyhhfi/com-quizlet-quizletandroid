<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="64sp"
            android:id="@+id/headline_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"/>
        <com.quizlet.partskit.widgets.QTextView
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/share_set_headline"
            style="@style/Header.H4"/>
        <com.quizlet.partskit.widgets.QTextView
            android:gravity="center_horizontal"
            android:id="@+id/share_set_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            style="@style/Body.B4"/>
        <com.quizlet.partskit.widgets.QButton
            android:id="@+id/share_set_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="24dp"
            android:minHeight="@dimen/quizlet_min_tap_target_size"
            android:text="@string/share_set_button"
            style="@style/QuizletSmallButton"/>
        <com.quizlet.partskit.widgets.QButton
            android:id="@+id/share_set_add_to_class_or_folder_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:minHeight="@dimen/quizlet_min_tap_target_size"
            android:text="@string/share_set_add_to_class_button"
            style="@style/QuizletSmallBorderlessButton"/>
        <include
            android:id="@+id/share_set_whatsapp_add_to_class"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_small"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            layout="@layout/share_set_buttons_whatsapp_add_to_class"/>
    </LinearLayout>
</ScrollView>
