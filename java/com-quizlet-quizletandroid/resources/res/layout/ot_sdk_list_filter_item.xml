<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_main"
    android:focusableInTouchMode="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/ot_description_text_size"
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ot_fab_margin"
        android:layout_marginTop="@dimen/ot_margin_medium"
        android:layout_marginBottom="@dimen/ot_margin_very_small"
        android:maxLines="5"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/ot_fab_margin"
        android:layout_toStartOf="@+id/category_select"
        android:layout_alignParentStart="true"/>
    <CheckBox
        android:id="@+id/category_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ot_vd_purpose_item_margin"
        android:layout_marginRight="@dimen/ot_vd_purpose_item_margin"
        android:layout_marginBottom="@dimen/ot_margin_very_small"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/ot_vd_purpose_item_margin"
        android:layout_alignParentEnd="true"/>
    <View
        android:id="@+id/sdk_name_divider"
        android:background="@color/trans_light_greyOT"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ot_divider_height_secondary"
        android:layout_marginTop="@dimen/ot_margin_medium"
        android:layout_below="@+id/category_name"/>
</RelativeLayout>
