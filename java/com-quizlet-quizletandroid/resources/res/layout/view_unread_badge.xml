<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/dot"
        android:background="@drawable/unread_badge"
        android:visibility="gone"
        android:layout_width="@dimen/activity_center_unread_badge_dot_size"
        android:layout_height="@dimen/activity_center_unread_badge_dot_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.quizlet.partskit.widgets.QTextView
        android:textSize="10sp"
        android:textColor="?attr/textColorInverse"
        android:gravity="center"
        android:id="@+id/count"
        android:background="@drawable/unread_badge"
        android:layout_width="@dimen/activity_center_unread_badge_count_size"
        android:layout_height="@dimen/activity_center_unread_badge_count_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/SubHeader.S4"/>
</androidx.constraintlayout.widget.ConstraintLayout>
