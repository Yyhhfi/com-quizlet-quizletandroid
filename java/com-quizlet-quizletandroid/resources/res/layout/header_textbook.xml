<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/ref_spacing_medium"
    android:paddingBottom="@dimen/ref_spacing_medium"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/ref_spacing_small"
    android:paddingEnd="@dimen/ref_spacing_small">
    <ImageView
        android:id="@+id/textbookCover"
        android:layout_width="64dp"
        android:layout_height="84dp"
        android:scaleType="fitCenter"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.quizlet.partskit.widgets.QTextView
        android:textColor="?attr/SysColorTextPrimary"
        android:id="@+id/textbookTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ref_spacing_small"
        app:layout_constraintEnd_toStartOf="@+id/textbookCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textbookCover"
        style="@style/Header.H3"/>
    <com.quizlet.partskit.widgets.QTextView
        android:textColor="?attr/SysColorTextPrimary"
        android:ellipsize="end"
        android:id="@+id/textbookEdition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ref_spacing_xsmall"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/textbookTitle"
        app:layout_constraintStart_toStartOf="@+id/textbookTitle"
        app:layout_constraintTop_toBottomOf="@+id/textbookTitle"
        style="@style/SubHeader.S3"/>
    <com.quizlet.partskit.widgets.QTextView
        android:textColor="?attr/AssemblyIconAndTertiaryText"
        android:id="@+id/textbookIsbn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ref_spacing_xsmall"
        app:layout_constraintEnd_toEndOf="@+id/textbookTitle"
        app:layout_constraintStart_toStartOf="@+id/textbookTitle"
        app:layout_constraintTop_toBottomOf="@+id/textbookEdition"
        style="@style/SubHeader.S4"/>
    <com.quizlet.partskit.widgets.QTextView
        android:textColor="?attr/AssemblyIconAndTertiaryText"
        android:id="@+id/textbookAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ref_spacing_xsmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textbookTitle"
        app:layout_constraintStart_toStartOf="@+id/textbookTitle"
        app:layout_constraintTop_toBottomOf="@+id/textbookIsbn"
        style="@style/SubHeader.S4"/>
</androidx.constraintlayout.widget.ConstraintLayout>
