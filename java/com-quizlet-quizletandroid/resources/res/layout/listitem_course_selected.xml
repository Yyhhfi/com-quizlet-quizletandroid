<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ref_spacing_medium">
    <ImageView
        android:id="@+id/courseImage"
        android:background="@drawable/bg_course_rounded"
        android:padding="@dimen/ref_spacing_xsmall"
        android:layout_width="@dimen/ref_spacing_xlarge"
        android:layout_height="@dimen/ref_spacing_xlarge"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_brand_courses"/>
    <TextView
        android:id="@+id/courseCodeOrName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ref_spacing_small"
        android:layout_marginEnd="@dimen/ref_spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnRemove"
        app:layout_constraintStart_toEndOf="@+id/courseImage"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/SubHeader.S3"/>
    <TextView
        android:id="@+id/courseCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ref_spacing_small"
        android:layout_marginEnd="@dimen/ref_spacing_small"
        app:layout_constraintBottom_toTopOf="@+id/courseName"
        app:layout_constraintEnd_toStartOf="@+id/btnRemove"
        app:layout_constraintStart_toEndOf="@+id/courseImage"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/SubHeader.S3"/>
    <TextView
        android:ellipsize="end"
        android:id="@+id/courseName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="@dimen/ref_spacing_small"
        android:layout_marginEnd="@dimen/ref_spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnRemove"
        app:layout_constraintStart_toEndOf="@+id/courseImage"
        app:layout_constraintTop_toBottomOf="@+id/courseCode"
        style="@style/Body.B3"/>
    <ImageView
        android:id="@+id/btnRemove"
        android:layout_width="@dimen/ref_size_small"
        android:layout_height="@dimen/ref_size_small"
        android:contentDescription="@string/remove_course_a11y"
        android:layout_marginEnd="@dimen/ref_spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sys_close_x"
        app:tint="?attr/EdgyFlowIconColor"/>
</androidx.constraintlayout.widget.ConstraintLayout>
