<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:background="@drawable/bg_rectangle_secondary_background_radius_small"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/matchCardBorderContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/matchImage"
            android:padding="@dimen/match_cell_border_width"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:cropToPadding="true"/>
        <View
            android:id="@+id/matchCardImageMask"
            android:background="?attr/SysColorCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/match_cell_border_width"
            android:alpha="0.75"/>
        <View
            android:id="@+id/matchCardColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.75"/>
        <com.quizlet.richtext.ui.MatchAutoResizeTextView
            android:textSize="28sp"
            android:gravity="center"
            android:id="@+id/matchTextView"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</merge>
