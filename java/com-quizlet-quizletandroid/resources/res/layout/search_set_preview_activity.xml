<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/AssemblyDarkBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/learn_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?android:attr/progressBarStyle"/>
    <com.quizlet.partskit.widgets.QTextView
        android:textColor="?attr/AssemblyDangerActionText"
        android:id="@+id/error_empty_state"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_internet_error"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/ref_spacing_medium"
        android:layout_marginEnd="@dimen/ref_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/learn_button"
        app:layout_constraintEnd_toEndOf="@+id/exit_button"
        app:layout_constraintStart_toStartOf="@+id/exit_button"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Header.H4"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_set_preview_recycler_view"
        android:visibility="visible"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/ref_spacing_medium"
        android:layout_marginBottom="@dimen/ref_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/learn_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.quizlet.partskit.widgets.QButton
        android:textColor="?attr/buttonTextColor"
        android:layout_gravity="center"
        android:id="@+id/learn_button"
        android:background="?attr/buttonBackgroundColor"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_set_preview_enter_learn"
        android:layout_marginStart="@dimen/ref_spacing_medium"
        android:layout_marginEnd="@dimen/ref_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/exit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/QuizletButton"/>
    <com.quizlet.partskit.widgets.QButton
        android:textColor="?attr/AssemblyInk100"
        android:layout_gravity="center"
        android:id="@+id/exit_button"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_set_preview_exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/QuizletBorderlessButton"/>
    <com.quizlet.quizletandroid.ui.preview.SetPreviewOnboarding
        android:id="@+id/onboarding"
        android:background="?attr/colorDarkOverlay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
