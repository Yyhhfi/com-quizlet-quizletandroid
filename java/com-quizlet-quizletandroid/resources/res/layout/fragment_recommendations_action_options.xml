<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recommendations_option_actions_title"
        app:layout_constraintBottom_toTopOf="@+id/saveToFolderCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Header.H3"/>
    <com.quizlet.quizletandroid.ui.common.views.SimpleImageWithTextCardView
        android:id="@+id/saveToFolderCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/recommendation_card_content_top_margin"
        android:layout_marginStart="@dimen/quizlet_edge_margin"
        app:cardDrawable="@drawable/ic_sys_folder"
        app:cardText="@string/recommendations_option_actions_save_to_folder"
        app:layout_constraintBottom_toTopOf="@+id/cancelActionOptionsButton"
        app:layout_constraintEnd_toStartOf="@+id/saveToClassCard"
        app:layout_constraintHeight_min="@dimen/recommendations_action_options_min_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintWidth_min="@dimen/recommendations_action_options_min_width"
        app:simpleCardBackground="@drawable/simple_text_card_view_border_shape"
        app:simpleCardElevation="0dp"/>
    <com.quizlet.quizletandroid.ui.common.views.SimpleImageWithTextCardView
        android:id="@+id/saveToClassCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/recommendations_action_options_between_card_margin"
        app:cardDrawable="@drawable/ic_sys_people"
        app:cardText="@string/recommendations_option_actions_save_to_class"
        app:layout_constraintBottom_toBottomOf="@+id/saveToFolderCard"
        app:layout_constraintEnd_toStartOf="@+id/notRelevantCard"
        app:layout_constraintHeight_min="@dimen/recommendations_action_options_min_height"
        app:layout_constraintStart_toEndOf="@+id/saveToFolderCard"
        app:layout_constraintTop_toTopOf="@+id/saveToFolderCard"
        app:layout_constraintWidth_min="@dimen/recommendations_action_options_min_width"
        app:simpleCardBackground="@drawable/simple_text_card_view_border_shape"
        app:simpleCardElevation="0dp"/>
    <com.quizlet.quizletandroid.ui.common.views.SimpleImageWithTextCardView
        android:id="@+id/notRelevantCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/recommendations_action_options_between_card_margin"
        android:layout_marginEnd="@dimen/quizlet_edge_margin"
        app:cardDrawable="@drawable/ic_sys_eye_closed"
        app:cardText="@string/recommendations_option_actions_not_relevant"
        app:layout_constraintBottom_toBottomOf="@+id/saveToFolderCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="@dimen/recommendations_action_options_min_height"
        app:layout_constraintStart_toEndOf="@+id/saveToClassCard"
        app:layout_constraintTop_toTopOf="@+id/saveToFolderCard"
        app:layout_constraintWidth_min="@dimen/recommendations_action_options_min_width"
        app:simpleCardBackground="@drawable/simple_text_card_view_border_shape"
        app:simpleCardElevation="0dp"/>
    <com.quizlet.partskit.widgets.QButton
        android:id="@+id/cancelActionOptionsButton"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recommendation_card_content_top_margin"
        android:text="@string/cancel"
        android:outlineAmbientShadowColor="?attr/AssemblyGray700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveToFolderCard"
        style="@style/QuizletBorderlessButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
