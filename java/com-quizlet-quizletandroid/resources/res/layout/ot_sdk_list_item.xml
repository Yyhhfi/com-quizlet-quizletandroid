<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sdk_list_item_layout"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/ot_sdk_list_user_choice">
        <TextView
            android:textSize="@dimen/ot_description_text_size"
            android:textStyle="bold"
            android:id="@+id/sdk_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ot_margin_small"
            android:maxLines="10"
            android:layout_alignParentLeft="true"
            android:paddingStart="@dimen/ot_margin_text"
            android:paddingEnd="@dimen/ot_margin_text"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="@dimen/ot_description_text_size"
            android:id="@+id/sdk_description"
            android:paddingTop="@dimen/ot_sdklist_desc_padding"
            android:paddingBottom="@dimen/ot_sdklist_desc_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:layout_below="@+id/sdk_name"
            android:layout_alignParentLeft="true"
            android:paddingStart="@dimen/ot_margin_text"
            android:paddingEnd="@dimen/ot_margin_text"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/ot_sdk_list_user_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/ot_margin_text"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/ot_margin_text"
        android:layout_alignParentEnd="true">
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ot_margin_small"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/ot_description_text_size"
            android:textStyle="bold"
            android:gravity="end"
            android:id="@+id/alwaysActiveTextSdk"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ot_margin_small"
            android:maxWidth="140dp"
            android:accessibilityTraversalAfter="@+id/sdk_name"/>
    </FrameLayout>
    <View
        android:id="@+id/view3"
        android:background="@color/trans_light_greyOT"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ot_divider_height_secondary"
        android:layout_marginLeft="@dimen/ot_fab_margin"
        android:layout_marginTop="@dimen/ot_margin_very_small"
        android:layout_marginRight="@dimen/ot_margin_small"
        android:layout_below="@+id/item_layout"
        android:layout_marginStart="@dimen/ot_fab_margin"
        android:layout_marginEnd="@dimen/ot_margin_small"/>
    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/view_powered_by_logo"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ot_powered_by_one_trust"
        android:layout_marginStart="@dimen/ot_margin_text"
        android:layout_marginEnd="@dimen/ot_margin_text"
        android:paddingVertical="@dimen/ot_powered_by_logo_padding_vertical"/>
</RelativeLayout>
