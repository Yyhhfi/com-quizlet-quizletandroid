<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_error_network_connection"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.quizlet.partskit.widgets.QTextView
        android:textStyle="bold"
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/list_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ref_spacing_xlarge"
        android:text="@string/no_network_connection_error_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/SubHeader.S2"/>
    <com.quizlet.partskit.widgets.QTextView
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/list_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_network_connection_error_msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_error_title"
        style="@style/Body.B3"/>
</androidx.constraintlayout.widget.ConstraintLayout>
