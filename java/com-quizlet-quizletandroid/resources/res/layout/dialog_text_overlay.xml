<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/textOverlayContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/textOverlayScrollView"
        android:background="@color/transparent"
        android:scrollbars="vertical"
        android:fadingEdgeLength="@dimen/fading_edge_length"
        android:layout_width="@dimen/dialog_min_width"
        android:layout_height="wrap_content"
        android:requiresFadingEdge="vertical">
        <com.quizlet.partskit.widgets.QTextView
            android:textSize="@dimen/dialog_overlay_text_size"
            android:id="@+id/textOverlayView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/quizlet_edge_margin_one_point_five"
            style="@style/Body.B3"/>
    </androidx.core.widget.NestedScrollView>
</androidx.cardview.widget.CardView>
