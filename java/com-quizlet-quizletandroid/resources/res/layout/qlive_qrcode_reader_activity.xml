<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="?attr/SysColorBackground"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraSourceView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/enterGameCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0"/>
    <com.quizlet.partskit.widgets.QTextView
        android:textSize="20sp"
        android:textColor="?attr/textColorInverse"
        android:gravity="center"
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/scan_qr_code"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        style="@style/Header.H3"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toTopOf="@+id/enterGameCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">
        <ImageView
            android:id="@+id/topLeft"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_shape_top_left_corner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/AssemblyGray300"/>
        <ImageView
            android:id="@+id/topRight"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_shape_top_left_corner"
            android:rotation="90"
            android:layout_marginStart="124dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/AssemblyGray300"/>
        <ImageView
            android:id="@+id/bottomLeft"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="124dp"
            android:src="@drawable/ic_shape_top_left_corner"
            android:rotation="270"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="?attr/AssemblyGray300"/>
        <ImageView
            android:id="@+id/bottomRight"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="124dp"
            android:src="@drawable/ic_shape_top_left_corner"
            android:rotation="180"
            android:layout_marginStart="124dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="?attr/AssemblyGray300"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.quizlet.partskit.widgets.QButton
        android:textSize="16sp"
        android:id="@+id/enterGameCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_game_code"
        android:fontFamily="@font/hurme_geometric_sans_2_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/QuizletBorderlessButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
