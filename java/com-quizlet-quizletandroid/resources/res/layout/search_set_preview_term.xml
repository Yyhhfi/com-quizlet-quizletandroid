<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.quizlet.partskit.widgets.QTextView
        android:ellipsize="end"
        android:id="@+id/word"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/ref_spacing_xsmall"
        app:layout_constraintBottom_toTopOf="@+id/definition"
        app:layout_constraintEnd_toStartOf="@+id/imageContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/SubHeader.S3"/>
    <com.quizlet.partskit.widgets.QTextView
        android:ellipsize="end"
        android:id="@+id/definition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ref_spacing_xsmall"
        android:layout_marginBottom="@dimen/ref_spacing_xsmall"
        android:maxLines="3"
        android:layout_marginEnd="@dimen/ref_spacing_xsmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word"
        style="@style/Body.B3"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/imageContainer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/ref_spacing_xsmall"
        android:layout_marginBottom="@dimen/ref_spacing_xsmall"
        android:layout_marginEnd="@dimen/ref_spacing_xsmall"
        app:cardCornerRadius="@dimen/radius_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/word"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
</merge>
