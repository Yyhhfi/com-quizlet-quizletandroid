<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/vl_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/ot_description_text_size"
            android:textStyle="bold"
            android:id="@+id/vendor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ot_fab_margin"
            android:layout_marginTop="@dimen/ot_margin_small"
            android:layout_marginBottom="@dimen/ot_margin_small"
            android:maxLines="3"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/ot_fab_margin"
            android:layout_marginEnd="@dimen/ot_vl_vendor_name_padding"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/gv_show_more"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ot_margin_small"
            android:src="@drawable/ot_forward_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/ot_margin_small"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ot_vl_toggle_margin"
            android:layout_marginEnd="@dimen/ot_vl_toggle_margin"/>
    </FrameLayout>
    <View
        android:id="@+id/view3"
        android:background="@color/trans_light_greyOT"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ot_divider_height_secondary"
        android:layout_marginTop="@dimen/ot_margin_very_small"
        android:layout_below="@+id/vl_items"/>
    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/view_powered_by_logo"
        android:paddingTop="@dimen/ot_powered_by_logo_padding_vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ot_powered_by_one_trust"
        android:layout_below="@+id/view3"
        android:layout_marginStart="@dimen/ot_margin_text"
        android:layout_marginEnd="@dimen/ot_margin_text"/>
</RelativeLayout>
