<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/feedback_box_parent"
    android:background="?attr/colorOverlayScrim"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:id="@+id/feedback_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/quizlet_edge_margin"
        app:cardCornerRadius="@dimen/ref_radius_medium"
        app:cardElevation="@dimen/card_elevation_active"
        app:cardUseCompatPadding="false">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="?attr/SysColorCard"
            android:paddingBottom="@dimen/ref_spacing_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/inner_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/feedback_titlebar"
                    android:padding="@dimen/assistant_feedback_content_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/spacer_16dp_vertical"
                    android:showDividers="middle">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textColor="?attr/textColorInverse"
                        android:id="@+id/feedback_titlebar_emoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:importantForAccessibility="no"
                        style="@style/Header.H2"/>
                    <com.quizlet.partskit.widgets.QTextView
                        android:textColor="?attr/textColorInverse"
                        android:id="@+id/feedback_titlebar_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SubHeader.S5"/>
                </LinearLayout>
                <ScrollView
                    android:id="@+id/la_feedback_scroll_view"
                    android:fadingEdgeLength="@dimen/fading_edge_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/assistant_feedback_continue_button_height"
                    android:fillViewport="true"
                    android:requiresFadingEdge="vertical">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/bottom_feedback_section_wrapper"
                        android:paddingLeft="@dimen/assistant_feedback_content_margin"
                        android:paddingRight="@dimen/assistant_feedback_content_margin"
                        android:paddingBottom="@dimen/assistant_feedback_section_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:id="@+id/top_feedback_section"
                            android:paddingLeft="@dimen/assistant_feedback_content_margin"
                            android:paddingTop="@dimen/assistant_feedback_section_margin"
                            android:paddingRight="@dimen/assistant_feedback_content_margin"
                            android:paddingBottom="@dimen/assistant_feedback_section_margin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <View
                            android:id="@+id/feedback_sections_divider"
                            android:background="?attr/dividerColor"
                            android:visibility="gone"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp"
                            style="@style/SettingsDivider"/>
                        <FrameLayout
                            android:id="@+id/bottom_feedback_section"
                            android:paddingLeft="@dimen/assistant_feedback_content_margin"
                            android:paddingTop="@dimen/assistant_feedback_section_margin"
                            android:paddingRight="@dimen/assistant_feedback_content_margin"
                            android:paddingBottom="@dimen/assistant_feedback_section_margin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <com.quizlet.partskit.widgets.QTextView
                            android:textColor="?attr/textColorAccent"
                            android:layout_gravity="end"
                            android:id="@+id/feedback_extra_action"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/la_feedback_show_more_button"
                            android:layout_marginEnd="@dimen/assistant_feedback_section_margin"
                            style="@style/SubHeader.S5"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <com.quizlet.assembly.widgets.buttons.AssemblyPrimaryButton
                android:id="@+id/feedback_continue_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ref_spacing_small"
                android:layout_marginStart="@dimen/ref_spacing_small"
                android:layout_marginEnd="@dimen/ref_spacing_small"
                app:layout_constraintTop_toBottomOf="@+id/inner_card_container"
                app:text="@string/feedback_continue_button"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
