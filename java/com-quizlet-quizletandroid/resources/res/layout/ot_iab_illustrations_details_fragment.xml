<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/iab_illustration_linearLyt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/iab_illustration_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iab_illustration_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ot_back_arrow"
            android:layout_alignBottom="@+id/view2"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:contentDescription="@string/str_back"
            android:layout_marginStart="@dimen/ot_margin_medium"
            android:layout_alignParentStart="true"/>
        <TextView
            android:textSize="@dimen/ot_subtitle_text_size"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/gv_page_title"
            android:padding="@dimen/ot_vl_title_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/view2"
            android:background="@color/trans_light_greyOT"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ot_divider_height_secondary"
            android:layout_below="@+id/gv_page_title"/>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/iab_illustration_detail_RL"
        android:paddingBottom="@dimen/ot_fab_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/ot_title_large_text_size"
                android:textStyle="bold"
                android:id="@+id/iab_illustration_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ot_fab_margin"
                android:layout_marginTop="@dimen/ot_margin_small"
                android:layout_marginRight="@dimen/ot_margin_medium"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/ot_fab_margin"
                android:layout_marginEnd="@dimen/ot_margin_medium"
                android:layout_alignParentStart="true"/>
            <TextView
                android:textSize="@dimen/ot_title_text_size"
                android:textStyle="bold"
                android:id="@+id/iab_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ot_fab_margin"
                android:layout_marginTop="@dimen/ot_margin_text"
                android:layout_marginRight="@dimen/ot_margin_medium"
                android:layout_below="@+id/iab_illustration_title"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="@dimen/ot_fab_margin"
                android:layout_marginEnd="@dimen/ot_margin_medium"
                android:layout_alignParentStart="true"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/iab_illustration_details_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ot_fab_margin"
                android:layout_marginTop="@dimen/ot_margin_text"
                android:layout_marginRight="@dimen/ot_margin_medium"
                android:layout_below="@+id/iab_group_name"
                android:layout_marginStart="@dimen/ot_fab_margin"
                android:layout_marginEnd="@dimen/ot_margin_medium"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
