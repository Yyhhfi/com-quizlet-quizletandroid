<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/adBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ref_spacing_xsmall"
        app:layout_constraintStart_toStartOf="@+id/adContainer"
        app:layout_constraintTop_toTopOf="@+id/adContainer"
        app:srcCompat="@drawable/ic_ad_badge"/>
    <com.quizlet.partskit.widgets.QTextView
        android:textColor="?attr/textColorSecondary"
        android:gravity="center"
        android:id="@+id/studyAdFree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adContainer"
        style="@style/Body.B4"/>
</androidx.constraintlayout.widget.ConstraintLayout>
