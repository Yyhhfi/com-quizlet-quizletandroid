<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginStart="@dimen/quizlet_edge_margin"
    android:layout_marginEnd="@dimen/quizlet_edge_margin"
    app:cardBackgroundColor="?attr/SysColorCard"
    app:cardCornerRadius="@dimen/ref_radius_medium"
    app:cardElevation="@dimen/nav2_listitem_cardElevation"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/listitem_group_card_layout"
        android:padding="@dimen/quizlet_edge_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/listitem_group_icon"
            android:layout_width="@dimen/nav2_listitem_icon_width"
            android:layout_height="@dimen/nav2_listitem_icon_height"
            android:src="@drawable/ic_sys_people"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/textColorSecondary"/>
        <com.quizlet.partskit.widgets.QTextView
            android:ellipsize="end"
            android:id="@+id/listitem_group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listitem_group_icon"
            style="@style/Header.H4"/>
        <com.quizlet.partskit.widgets.QTextView
            android:textColor="?android:attr/textColorSecondary"
            android:ellipsize="end"
            android:id="@+id/listitem_group_detail_school"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/listitem_group_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="@dimen/quizlet_edge_margin"
            style="@style/SubHeader.S5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.quizlet.features.infra.legacyadapter.common.ListitemPressIndicatorLine
        android:layout_gravity="bottom"
        android:id="@+id/listitemPressIndicatorLine"
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>
</androidx.cardview.widget.CardView>
