<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:layout_width="@dimen/quizlet_min_tap_target_size"
    android:layout_height="@dimen/quizlet_min_tap_target_size">
    <ImageView
        android:id="@+id/activityCenterIcon"
        android:layout_width="@dimen/home_activity_center_menu_item_icon_size"
        android:layout_height="@dimen/home_activity_center_menu_item_icon_size"
        android:src="@drawable/ic_sys_bell"
        android:contentDescription="@string/activity_center_icon_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white"/>
    <com.quizlet.quizletandroid.ui.activitycenter.views.UnreadBadgeViewV2
        android:id="@+id/unreadBadge"
        android:visibility="gone"
        android:layout_width="@dimen/ref_size_small"
        android:layout_height="@dimen/ref_size_small"
        android:layout_marginTop="@dimen/home_activity_center_menu_item_margin_top"
        android:layout_marginEnd="@dimen/home_activity_center_menu_item_margin_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
