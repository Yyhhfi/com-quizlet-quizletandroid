<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/leftImage"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:layout_marginEnd="@dimen/assembly_pill_text_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pillText"
        app:layout_constraintHeight="@dimen/ref_size_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth="wrap_content"
        app:layout_goneMarginEnd="0dp"/>
    <com.quizlet.partskit.widgets.QTextView
        android:textColor="?attr/AssemblyPillTextColor"
        android:ellipsize="end"
        android:id="@+id/pillText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rightImage"
        app:layout_constraintStart_toEndOf="@+id/leftImage"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/SubHeader.S5"/>
    <ImageView
        android:id="@+id/rightImage"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:layout_marginStart="@dimen/assembly_pill_text_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="@dimen/ref_size_small"
        app:layout_constraintStart_toEndOf="@+id/pillText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth="wrap_content"
        app:layout_goneMarginStart="0dp"/>
</merge>
