<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/doctor_background_view"
        android:background="#52000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/doctor_popup_view"
        android:background="@color/DOCTOR_POPUP_BACKGROUND_COLOR"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/doctor_popup_thumbnail_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="@+id/doctor_popup_view"
        app:layout_constraintTop_toTopOf="@+id/doctor_popup_view"/>
    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/DOCTOR_POPUP_TITLE_COLOR"
        android:id="@+id/doctor_popup_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text=""
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@+id/doctor_popup_view"
        app:layout_constraintStart_toEndOf="@+id/doctor_popup_thumbnail_image_view"
        app:layout_constraintTop_toTopOf="@+id/doctor_popup_thumbnail_image_view"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/DOCTOR_POPUP_MESSAGE_COLOR"
        android:id="@+id/doctor_popup_message_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/doctor_popup_title_text_view"
        app:layout_constraintStart_toStartOf="@+id/doctor_popup_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/doctor_popup_title_text_view"/>
    <View
        android:id="@+id/doctor_content_view"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="103dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"/>
    <View
        android:id="@+id/doctor_hide_bottom_corner_view"
        android:background="#ffffff"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/doctor_top_border_view"
        android:background="#3c3c43"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="@+id/doctor_content_view"
        app:layout_constraintStart_toStartOf="@+id/doctor_content_view"
        app:layout_constraintTop_toTopOf="@+id/doctor_content_view"/>
    <ImageView
        android:id="@+id/doctor_thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="@+id/doctor_content_view"
        app:layout_constraintTop_toTopOf="@+id/doctor_content_view"/>
    <TextView
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/DOCTOR_DEFAULT_TEXT_COLOR"
        android:id="@+id/doctor_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/doctor_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/doctor_thumbnail"/>
    <ImageButton
        android:id="@+id/doctor_close_button"
        android:background="#00ffffff"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toEndOf="@+id/doctor_content_view"
        app:layout_constraintTop_toTopOf="@+id/doctor_content_view"/>
    <TextView
        android:textSize="13sp"
        android:textColor="@color/DOCTOR_DEFAULT_TEXT_COLOR"
        android:id="@+id/doctor_credit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/doctor_title_label"
        app:layout_constraintTop_toBottomOf="@+id/doctor_title_label"/>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/doctor_fragment_container_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/doctor_content_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doctor_top_border_view"
        app:layout_constraintVertical_bias="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
