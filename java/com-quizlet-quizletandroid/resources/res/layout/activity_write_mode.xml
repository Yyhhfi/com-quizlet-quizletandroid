<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/QuizletStudyModeBackground">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/modesHeader"
            layout="@layout/modes_header"/>
        <include
            android:id="@+id/studyModeAppBar"
            layout="@layout/layout_study_mode_appbar"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.quizlet.quizletandroid.ui.studymodes.write.WriteModeCheckPointView
            android:id="@+id/learn_checkpointview"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.quizlet.quizletandroid.ui.studymodes.write.WriteModeResultsView
            android:id="@+id/learn_resultsview"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.quizlet.quizletandroid.ui.studymodes.write.WriteModePromptView
            android:id="@+id/learn_promptview"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
