<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/ref_spacing_small"
    android:paddingVertical="@dimen/ref_spacing_small">
    <com.quizlet.assembly.widgets.buttons.AssemblySecondaryButton
        android:id="@+id/firstExerciseButton"
        app:layout_constraintEnd_toStartOf="@+id/secondExerciseButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:size="large"
        style="@style/ExplanationSolutionFooterButton"/>
    <com.quizlet.assembly.widgets.buttons.AssemblySecondaryButton
        android:id="@+id/secondExerciseButton"
        android:layout_marginStart="@dimen/ref_spacing_xsmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/firstExerciseButton"
        app:layout_constraintTop_toTopOf="parent"
        app:size="large"
        style="@style/ExplanationSolutionFooterButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
