<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/spacer_40dp_horizontal"
        android:showDividers="middle">
        <LinearLayout
            android:id="@+id/match_settings_general_group"
            style="@style/StudyModeSettingsGroup">
            <com.quizlet.partskit.widgets.QTextView
                android:text="@string/match_settings_group_general"
                style="@style/StudyModeSettingsGroupLabel"/>
            <com.quizlet.uicommon.ui.common.widgets.QSegmentedControl
                android:id="@+id/match_settings_selected_terms_filter_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:leftText="@string/study_all"/>
        </LinearLayout>
        <LinearLayout style="@style/StudyModeSettingsGroup">
            <com.quizlet.partskit.widgets.QTextView
                android:text="@string/match_settings_group_match"
                style="@style/StudyModeSettingsGroupLabel"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/spacer_20dp_horizontal"
                android:showDividers="middle">
                <RelativeLayout
                    android:id="@+id/match_settings_term_switch_layout"
                    android:visibility="gone"
                    style="@style/StudyModeSettingsGroupItem">
                    <com.quizlet.assembly.widgets.toggle.AssemblyToggleSwitch
                        android:id="@+id/match_settings_term_switch"
                        style="@style/StudyModeSettingsGroupItemSwitch"/>
                    <com.quizlet.partskit.widgets.QTextView
                        android:text="@string/match_settings_term"
                        android:layout_toStartOf="@+id/match_settings_term_switch"
                        style="@style/StudyModeSettingsGroupItemLabel"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/match_settings_definition_switch_layout"
                    android:visibility="gone"
                    style="@style/StudyModeSettingsGroupItem">
                    <com.quizlet.assembly.widgets.toggle.AssemblyToggleSwitch
                        android:id="@+id/match_settings_definition_switch"
                        style="@style/StudyModeSettingsGroupItemSwitch"/>
                    <com.quizlet.partskit.widgets.QTextView
                        android:text="@string/match_settings_definition"
                        android:layout_toStartOf="@+id/match_settings_definition_switch"
                        style="@style/StudyModeSettingsGroupItemLabel"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/match_settings_location_switch_layout"
                    android:visibility="gone"
                    style="@style/StudyModeSettingsGroupItem">
                    <com.quizlet.assembly.widgets.toggle.AssemblyToggleSwitch
                        android:id="@+id/match_settings_location_switch"
                        style="@style/StudyModeSettingsGroupItemSwitch"/>
                    <com.quizlet.partskit.widgets.QTextView
                        android:text="@string/match_settings_location"
                        android:layout_toStartOf="@+id/match_settings_location_switch"
                        style="@style/StudyModeSettingsGroupItemLabel"/>
                </RelativeLayout>
                <com.quizlet.partskit.widgets.QTextView
                    android:id="@+id/match_settings_match_group_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/StudyModeSettingsGroupItemMessage"/>
                <com.quizlet.partskit.widgets.QTextView
                    android:textColor="?attr/AssemblyErrorText"
                    android:id="@+id/match_settings_match_group_status_error"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/match_settings_status_error"
                    style="@style/StudyModeSettingsGroupItemError"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout style="@style/StudyModeSettingsGroup">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/spacer_20dp_horizontal"
                android:showDividers="middle">
                <RelativeLayout
                    android:id="@+id/match_settings_restart_match_button"
                    style="@style/StudyModeSettingsGroupItem">
                    <com.quizlet.partskit.widgets.QTextView
                        android:textColor="?attr/AssemblyLinkTextSelector"
                        android:id="@+id/match_settings_restart_match_button_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/match_settings_restart"
                        style="@style/StudyModeSettingsGroupItemLabel"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
