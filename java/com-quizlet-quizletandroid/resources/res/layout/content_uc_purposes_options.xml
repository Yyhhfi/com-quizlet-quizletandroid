<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/option_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/ot_title_text_size"
        android:textStyle="bold"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ot_margin_small"
        android:layout_marginBottom="@dimen/ot_margin_small"
        android:text="Consent Preferences"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/back_cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ot_margin_small"
        android:layout_marginTop="@dimen/ot_margin_medium"
        android:src="@drawable/ot_back_arrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <View
        android:id="@+id/pc_title_divider"
        android:background="@color/trans_light_greyOT"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ot_divider_height_secondary"
        android:layout_below="@+id/title"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pc_title_divider">
        <RelativeLayout
            android:paddingLeft="@dimen/ot_margin_text"
            android:paddingRight="@dimen/ot_margin_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pc_title_divider"
            android:paddingStart="@dimen/ot_margin_text"
            android:paddingEnd="@dimen/ot_margin_text">
            <TextView
                android:textSize="@dimen/ot_title_text_size"
                android:textStyle="bold"
                android:id="@+id/selected_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ot_margin_small"
                android:layout_marginBottom="@dimen/ot_margin_small"/>
            <TextView
                android:textSize="@dimen/ot_description_text_size"
                android:id="@+id/selected_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ot_margin_very_small"
                android:layout_below="@+id/selected_item_title"/>
            <TextView
                android:textSize="@dimen/ot_title_text_size"
                android:id="@+id/list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ot_margin_small"
                android:layout_marginBottom="@dimen/ot_margin_small"
                android:layout_below="@+id/selected_item_description"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/consent_preferences_selection_list"
                android:background="@android:color/transparent"
                android:paddingBottom="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/list_title"/>
            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/view_powered_by_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ot_powered_by_one_trust"
                android:layout_below="@+id/consent_preferences_selection_list"
                android:paddingVertical="@dimen/ot_powered_by_logo_padding_vertical"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
