<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="@dimen/quizlet_edge_margin_one_point_five"
    android:paddingBottom="@dimen/quizlet_edge_margin_one_point_five"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.quizlet.partskit.widgets.QTextView
        android:id="@+id/chapter_menu_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/quizlet_edge_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/coming_soon_badge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Body.B3"/>
    <com.quizlet.assembly.widgets.AssemblyPill
        android:id="@+id/coming_soon_badge"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/quizlet_edge_margin"
        app:layout_constraintBaseline_toBaselineOf="@+id/chapter_menu_item_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chapter_menu_item_chevron"
        app:layout_constraintStart_toEndOf="@+id/chapter_menu_item_text"
        app:pillText="@string/coming_soon_badge"
        app:pillVariant="subtle"/>
    <ImageView
        android:id="@+id/chapter_menu_item_chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/quizlet_edge_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sys_caret_right"/>
</androidx.constraintlayout.widget.ConstraintLayout>
