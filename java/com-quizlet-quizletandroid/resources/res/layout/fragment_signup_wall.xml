<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/drawerHandlerView"
        android:background="@drawable/drawer_handler_convertible_modal"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/ref_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:gravity="center"
        android:id="@+id/signupWallTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ref_spacing_medium"
        android:text="@string/signup_wall_title"
        android:layout_marginStart="@dimen/ref_spacing_medium"
        android:layout_marginEnd="@dimen/ref_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawerHandlerView"
        style="@style/Header.H3"/>
    <com.quizlet.assembly.widgets.buttons.AssemblyPrimaryButton
        android:id="@+id/getStartedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ref_spacing_large"
        android:layout_marginStart="@dimen/ref_spacing_medium"
        android:layout_marginEnd="@dimen/ref_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupWallTitle"
        app:text="@string/get_started"/>
    <TextView
        android:gravity="center"
        android:id="@+id/loginOption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ref_spacing_medium"
        android:layout_marginBottom="@dimen/ref_spacing_large"
        android:text="@string/signup_wall_login_option"
        android:layout_marginStart="@dimen/ref_spacing_medium"
        android:layout_marginEnd="@dimen/ref_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getStartedButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
