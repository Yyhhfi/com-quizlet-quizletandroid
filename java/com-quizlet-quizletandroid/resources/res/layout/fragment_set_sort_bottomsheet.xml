<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/BottomSheetNestedScrollView">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/quizlet_edge_margin_half"
        android:layout_marginBottom="@dimen/quizlet_edge_margin_half">
        <com.quizlet.partskit.widgets.QTextView
            android:textColor="?attr/textColorSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginBottom="@dimen/text_margin"
            android:text="@string/sort_terms"
            android:layout_marginStart="@dimen/text_margin"
            style="@style/SubHeader.S4"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/original_option_item"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/text_margin"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.quizlet.partskit.widgets.QTextView
                android:textColor="?attr/textColor"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/original_option_bottom_sheet"
                android:layout_weight="1"
                style="@style/Body.B3"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/original_option_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sys_check"
                android:contentDescription="@string/checked"
                app:tint="?attr/iconColorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/alphabetical_option_item"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/text_margin"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.quizlet.partskit.widgets.QTextView
                android:textColor="?attr/textColor"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/alphabetical_option_bottom_sheet"
                android:layout_weight="1"
                style="@style/Body.B3"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/alphabetical_option_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sys_check"
                android:contentDescription="@string/checked"
                app:tint="?attr/iconColorPrimary"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
