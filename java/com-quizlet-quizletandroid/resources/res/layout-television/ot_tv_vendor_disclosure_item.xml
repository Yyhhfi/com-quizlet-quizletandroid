<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ot_margin_small"
    android:layout_marginBottom="@dimen/ot_margin_medium"
    android:layout_marginStart="5dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/disclosure_id_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/ot_tv_list_item_text_size"
            android:id="@+id/disclosure_id_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <TextView
            android:textSize="@dimen/ot_tv_list_item_text_size"
            android:id="@+id/disclosure_id_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/disclosure_type_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/ot_tv_list_item_text_size"
            android:id="@+id/disclosure_type_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <TextView
            android:textSize="@dimen/ot_tv_list_item_text_size"
            android:id="@+id/disclosure_type_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/disclosure_ls_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/ot_tv_list_item_text_size"
            android:id="@+id/disclosure_ls_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <TextView
            android:textSize="@dimen/ot_tv_list_item_text_size"
            android:id="@+id/disclosure_ls_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/disclosure_domain_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/ot_tv_list_item_text_size"
            android:id="@+id/disclosure_domain_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <TextView
            android:textSize="@dimen/ot_tv_list_item_text_size"
            android:id="@+id/disclosure_domain_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/disclosure_purpose_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/ot_tv_list_item_text_size"
            android:id="@+id/disclosure_purpose_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/disclosure_purpose_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
