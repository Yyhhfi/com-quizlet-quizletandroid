<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/banner_tv_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/ot_banner_logo_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="start"
            android:id="@+id/ot_tv_banner_logo"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="@dimen/ot_tv_layout_margin_small"
            android:layout_marginRight="@dimen/ot_tv_margin_medium"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/str_ot_logo_description"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="@dimen/ot_tv_margin_medium"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:layout_gravity="end"
            android:id="@+id/tv_close_banner"
            android:background="@drawable/ot_tv_round_bg"
            android:padding="@dimen/ot_tv_icon_padding"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="visible"
            android:nextFocusUp="@+id/tv_close_banner"
            android:layout_width="@dimen/ot_tv_icon_height"
            android:layout_height="@dimen/ot_tv_icon_height"
            android:layout_marginTop="@dimen/ot_tv_margin_secondary"
            android:src="@drawable/ot_tv_close"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/str_ot_close_icon_desc"
            android:layout_marginStart="@dimen/ot_tv_margin_secondary"
            android:layout_marginEnd="@dimen/ot_tv_button_layout_margin_large"
            android:layout_alignParentEnd="true"/>
        <Button
            android:textSize="11sp"
            android:id="@+id/tv_close_banner_text"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            android:nextFocusUp="@+id/tv_close_banner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:src="@drawable/ot_tv_close"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/str_ot_close_text_desc"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/ot_tv_margin_secondary"
            android:layout_marginEnd="@dimen/ot_tv_button_layout_margin_large"
            android:layout_alignParentEnd="true"
            android:stateListAnimator="@null"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/banner_detail_pane_tv"
                android:paddingBottom="@dimen/ot_tv_margin_medium"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusRight="@+id/btn_accept_TV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ot_tv_margin_medium"
                android:fillViewport="true"
                android:layout_above="@+id/button_layout_bottom"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/ot_tv_margin_medium">
                <LinearLayout
                    android:orientation="vertical"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ot_tv_layout_margin_small"
                    android:layout_marginBottom="@dimen/ot_tv_layout_margin_small">
                    <TextView
                        android:textSize="@dimen/ot_tv_title_text_size_large"
                        android:textStyle="bold"
                        android:textColor="@color/ot_default_text_color"
                        android:gravity="start"
                        android:id="@+id/banner_title_tv"
                        android:nextFocusRight="@+id/btn_accept_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/ot_tv_banner_title_padding"
                        android:paddingEnd="@dimen/ot_tv_banner_title_padding"
                        android:layout_marginStart="@dimen/tv_banner_desc_margin"/>
                    <TextView
                        android:textSize="@dimen/ot_tv_banner_desc_text_size"
                        android:textColor="@color/ot_default_text_color"
                        android:gravity="start"
                        android:id="@+id/banner_ad_after_title_tv"
                        android:visibility="gone"
                        android:nextFocusRight="@+id/btn_accept_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ot_tv_text_margin_very_small"
                        android:paddingStart="@dimen/ot_tv_banner_title_padding"
                        android:paddingEnd="@dimen/ot_tv_banner_title_padding"
                        android:layout_marginStart="@dimen/tv_banner_desc_margin"/>
                    <TextView
                        android:textSize="@dimen/ot_tv_banner_desc_text_size"
                        android:gravity="start"
                        android:id="@+id/banner_desc_tv"
                        android:nextFocusRight="@+id/btn_accept_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ot_tv_text_margin_small"
                        android:minLines="4"
                        android:lineSpacingExtra="@dimen/ot_tv_text_line_spacing"
                        android:paddingStart="@dimen/ot_tv_banner_title_padding"
                        android:paddingEnd="@dimen/ot_tv_banner_title_padding"
                        android:layout_marginStart="@dimen/tv_banner_desc_margin"/>
                    <TextView
                        android:textSize="@dimen/ot_tv_banner_desc_text_size"
                        android:textColor="@color/ot_default_text_color"
                        android:gravity="start"
                        android:id="@+id/banner_ad_after_desc_tv"
                        android:visibility="gone"
                        android:nextFocusRight="@+id/btn_accept_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ot_tv_text_margin_very_small"
                        android:lineSpacingExtra="@dimen/ot_tv_text_line_spacing"
                        android:paddingStart="@dimen/ot_tv_banner_title_padding"
                        android:paddingEnd="@dimen/ot_tv_banner_title_padding"
                        android:layout_marginStart="@dimen/tv_banner_desc_margin"/>
                    <TextView
                        android:textSize="@dimen/ot_tv_title_text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/ot_default_text_color"
                        android:gravity="start"
                        android:id="@+id/banner_iab_title_tv"
                        android:nextFocusRight="@+id/btn_accept_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ot_tv_margin_medium"
                        android:paddingStart="@dimen/ot_tv_banner_title_padding"
                        android:paddingEnd="@dimen/ot_tv_banner_title_padding"
                        android:layout_marginStart="@dimen/tv_banner_desc_margin"/>
                    <TextView
                        android:textSize="@dimen/ot_tv_banner_desc_text_size"
                        android:textColor="@color/ot_default_text_color"
                        android:gravity="start"
                        android:id="@+id/banner_iab_desc_tv"
                        android:nextFocusRight="@+id/btn_accept_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ot_tv_text_margin_small"
                        android:paddingStart="@dimen/ot_tv_banner_title_padding"
                        android:paddingEnd="@dimen/ot_tv_banner_title_padding"
                        android:layout_marginStart="@dimen/tv_banner_desc_margin"/>
                    <TextView
                        android:textSize="@dimen/ot_tv_banner_desc_text_size"
                        android:textColor="@color/ot_default_text_color"
                        android:gravity="start"
                        android:id="@+id/banner_ad_after_dpd_tv"
                        android:visibility="gone"
                        android:nextFocusRight="@+id/btn_accept_TV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ot_tv_text_margin_very_small"
                        android:lineSpacingExtra="@dimen/ot_tv_text_line_spacing"
                        android:paddingStart="@dimen/ot_tv_banner_title_padding"
                        android:paddingEnd="@dimen/ot_tv_banner_title_padding"
                        android:layout_marginStart="@dimen/tv_banner_desc_margin"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/tv_qr_code_banner"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/ot_margin_small">
                        <TextView
                            android:id="@+id/tv_qr_code_text_banner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"/>
                        <ImageView
                            android:id="@+id/qrcode_img_tv_banner"
                            android:focusableInTouchMode="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/button_layout_bottom"
                android:paddingTop="@dimen/ot_tv_margin_medium"
                android:paddingBottom="@dimen/ot_tv_margin_medium"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingStart="@dimen/ot_tv_margin_primary"
                android:paddingEnd="@dimen/ot_tv_margin_primary"
                android:elevation="10dp"/>
        </RelativeLayout>
        <View
            android:id="@+id/ot_tv_button_divider"
            android:visibility="gone"
            android:layout_width="@dimen/ot_divider_height_primary"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ot_tv_div_margin_small"
            android:layout_marginBottom="@dimen/ot_tv_layout_margin_bottom"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/button_layout"
            android:paddingTop="@dimen/ot_tv_layout_padding"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ot_tv_button_layout_margin_large"
            android:layout_weight="2.5"
            android:paddingStart="@dimen/ot_button_layout_padding"
            android:paddingEnd="@dimen/ot_button_layout_padding"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/ot_tv_margin_medium">
            <Button
                android:id="@+id/btn_accept_TV"
                android:padding="@dimen/ot_tv_button_padding"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/ot_tv_div_margin_small"
                android:layout_marginEnd="@dimen/ot_tv_div_margin_small"
                android:stateListAnimator="@null"/>
            <Button
                android:id="@+id/btn_reject_TV"
                android:padding="@dimen/ot_tv_button_padding"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ot_tv_button_margin_top"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/ot_tv_div_margin_small"
                android:layout_marginEnd="@dimen/ot_tv_div_margin_small"
                android:stateListAnimator="@null"/>
            <Button
                android:id="@+id/btn_mp_TV"
                android:padding="@dimen/ot_tv_button_padding"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ot_tv_button_margin_top"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/ot_tv_div_margin_small"
                android:layout_marginEnd="@dimen/ot_tv_div_margin_small"
                android:stateListAnimator="@null"/>
            <Button
                android:id="@+id/btn_VL_link_TV"
                android:padding="@dimen/ot_tv_button_padding"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ot_tv_button_margin_top"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/ot_tv_div_margin_small"
                android:layout_marginEnd="@dimen/ot_tv_div_margin_small"
                android:stateListAnimator="@null"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
