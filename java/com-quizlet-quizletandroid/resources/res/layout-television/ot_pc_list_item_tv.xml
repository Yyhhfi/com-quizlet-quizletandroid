<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/tv_grp_layout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/ot_tv_list_item_text_size"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_gravity="end|center_vertical"
        android:id="@+id/tv_grp_name"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ot_tv_margin_primary"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:layout_marginStart="@dimen/ot_tv_margin_primary"
        android:layout_marginEnd="@dimen/ot_tv_layout_margin_small"/>
    <TextView
        android:textSize="@dimen/ot_vl_toggle_text_size"
        android:gravity="center_vertical"
        android:layout_gravity="end|center_vertical"
        android:id="@+id/tv_group_vendor_count"
        android:paddingBottom="@dimen/ot_tv_text_margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ot_tv_margin_primary"
        android:maxLines="4"
        android:layout_weight="1"
        android:paddingStart="@dimen/ot_tv_text_margin_small"
        android:paddingEnd="@dimen/ot_tv_text_margin_small"
        android:layout_marginStart="@dimen/ot_tv_margin_primary"
        android:layout_marginEnd="@dimen/ot_tv_layout_margin_small"/>
</LinearLayout>
