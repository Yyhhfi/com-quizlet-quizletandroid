<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/ot_margin_small"
    android:layout_marginTop="@dimen/ot_margin_small"
    android:layout_marginBottom="@dimen/ot_margin_medium"
    android:layout_marginStart="@dimen/ot_margin_small">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/ot_vd_link_text_size"
            android:id="@+id/domain_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <TextView
            android:textSize="@dimen/ot_vd_link_text_size"
            android:id="@+id/domain_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/ot_vd_link_text_size"
            android:id="@+id/used_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <TextView
            android:textSize="@dimen/ot_vd_link_text_size"
            android:id="@+id/used_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
