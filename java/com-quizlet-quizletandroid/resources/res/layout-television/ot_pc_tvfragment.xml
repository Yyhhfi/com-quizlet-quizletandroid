<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_pc_lyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ot_tv_pc_logo"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/ot_tv_margin_medium"
        android:layout_marginStart="40dp"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/ot_tv_pc_close"
        android:background="@drawable/ot_tv_round_bg"
        android:padding="@dimen/ot_tv_icon_padding"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:nextFocusRight="@+id/ot_tv_pc_close"
        android:nextFocusUp="@+id/ot_tv_pc_close"
        android:layout_width="@dimen/ot_tv_icon_height"
        android:layout_height="@dimen/ot_tv_icon_height"
        android:layout_marginTop="@dimen/ot_tv_layout_margin_bottom"
        android:src="@drawable/ot_tv_close"
        android:contentDescription="Close"
        android:layout_marginEnd="@dimen/ot_tv_margin_secondary"
        android:layout_alignParentEnd="true"/>
    <Button
        android:textSize="11sp"
        android:id="@+id/ot_tv_pc_close_button"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:nextFocusRight="@+id/ot_tv_pc_close_button"
        android:nextFocusUp="@+id/ot_tv_pc_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ot_tv_margin_medium"
        android:textAllCaps="false"
        android:layout_marginEnd="@dimen/ot_tv_margin_secondary"
        android:layout_alignParentEnd="true"
        android:stateListAnimator="@null"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/tv_list_layout"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_btn_layout"
        android:layout_below="@+id/ot_tv_pc_logo">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tv_grp_list"
            android:paddingBottom="@dimen/ot_tv_text_margin_small"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="2.5"/>
        <View
            android:id="@+id/ot_pc_list_div_tv"
            android:layout_width="@dimen/ot_divider_height_primary"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="1dp"/>
        <FrameLayout
            android:id="@+id/ot_pc_detail_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/tv_btn_layout"
        android:paddingTop="@dimen/ot_tv_layout_padding"
        android:paddingBottom="@dimen/ot_tv_layout_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingEnd="@dimen/ot_tv_layout_padding"
        android:elevation="@dimen/ot_layout_elevation">
        <Button
            android:id="@+id/tv_btn_confirm"
            android:padding="@dimen/ot_tv_button_padding"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@+id/tv_btn_confirm"
            android:nextFocusRight="@+id/tv_btn_accept_pc"
            android:nextFocusDown="@+id/tv_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ot_tv_margin_primary"
            android:layout_marginRight="@dimen/ot_tv_layout_margin_small"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/ot_tv_margin_primary"
            android:layout_marginEnd="@dimen/ot_tv_layout_margin_small"
            android:stateListAnimator="@null"/>
        <Button
            android:id="@+id/tv_btn_accept_pc"
            android:padding="@dimen/ot_tv_button_padding"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@+id/tv_btn_confirm"
            android:nextFocusRight="@+id/tv_btn_reject_pc"
            android:nextFocusDown="@+id/tv_btn_accept_pc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ot_tv_layout_margin_small"
            android:layout_marginRight="@dimen/ot_tv_layout_margin_small"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/ot_tv_layout_margin_small"
            android:layout_marginEnd="@dimen/ot_tv_layout_margin_small"
            android:stateListAnimator="@null"/>
        <Button
            android:id="@+id/tv_btn_reject_pc"
            android:padding="@dimen/ot_tv_button_padding"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@+id/tv_btn_accept_pc"
            android:nextFocusRight="@+id/tv_btn_reject_pc"
            android:nextFocusDown="@+id/tv_btn_reject_pc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ot_tv_layout_margin_small"
            android:layout_marginRight="@dimen/ot_tv_margin_medium"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/ot_tv_layout_margin_small"
            android:layout_marginEnd="@dimen/ot_tv_margin_medium"
            android:stateListAnimator="@null"/>
    </LinearLayout>
</RelativeLayout>
