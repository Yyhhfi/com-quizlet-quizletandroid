<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/AssemblySecondaryActionBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.quizlet.assembly.widgets.buttons.AssemblyPrimaryButton
        android:id="@+id/seePlansButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ref_spacing_large"
        android:layout_marginBottom="@dimen/ref_spacing_medium"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginHorizontal="@dimen/ref_spacing_large"
        app:layout_constraintBottom_toTopOf="@+id/freeTrialText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/continueFreeButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="@dimen/ref_spacing_large"
        app:primaryButtonVariant="upgrade"
        app:size="xlarge"
        app:text="@string/see_plans"/>
    <com.quizlet.assembly.widgets.buttons.AssemblyTextButton
        android:id="@+id/continueFreeButton"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginStart="@dimen/ref_spacing_large"
        app:layout_constraintBottom_toBottomOf="@+id/seePlansButton"
        app:layout_constraintEnd_toStartOf="@+id/seePlansButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seePlansButton"
        app:size="xlarge"
        app:text="@string/continue_using_free_quizlet"
        app:textButtonVariant="link"/>
    <com.quizlet.partskit.widgets.QTextView
        android:gravity="center_horizontal"
        android:id="@+id/freeTrialText"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ref_spacing_medium"
        android:layout_marginHorizontal="@dimen/ref_spacing_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seePlansButton"
        style="@style/Body.B4"/>
</androidx.constraintlayout.widget.ConstraintLayout>
