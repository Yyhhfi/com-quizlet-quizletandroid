<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/endOfMatch"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/match_leaderboard_button_section">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.quizlet.partskit.widgets.QTextView
                android:gravity="center"
                android:id="@+id/match_finish_text"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/you_finished_in"
                style="@style/Body.B2"/>
            <com.quizlet.partskit.widgets.QTextView
                android:gravity="center"
                android:id="@+id/match_finish_seconds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Header.H2"/>
            <com.quizlet.partskit.widgets.QTextView
                android:gravity="center"
                android:id="@+id/match_personal_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/you_finished_in"
                style="@style/Body.B2"/>
            <com.quizlet.partskit.widgets.QTextView
                android:gravity="center"
                android:id="@+id/match_error"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Body.B4"/>
            <com.quizlet.partskit.widgets.QProgressBar
                android:id="@+id/match_progress_bar"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:indeterminate="true"
                style="?android:attr/progressBarStyle"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/match_leaderboard_score"
                android:visibility="gone"
                android:fadingEdgeLength="@dimen/fading_edge_length"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp"
                android:requiresFadingEdge="vertical"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/match_leaderboard_button_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true">
        <com.quizlet.partskit.widgets.QButton
            android:gravity="center"
            android:id="@+id/match_play_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginStart="@dimen/button_margin"/>
        <androidx.legacy.widget.Space
            android:layout_width="@dimen/quizlet_edge_margin"
            android:layout_height="match_parent"/>
        <com.quizlet.partskit.widgets.QButton
            android:gravity="center"
            android:id="@+id/match_play_other_selected_terms_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginEnd="@dimen/button_margin"/>
    </LinearLayout>
    <com.quizlet.quizletandroid.ui.common.views.ShareSetButton
        android:id="@+id/match_share_set_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
