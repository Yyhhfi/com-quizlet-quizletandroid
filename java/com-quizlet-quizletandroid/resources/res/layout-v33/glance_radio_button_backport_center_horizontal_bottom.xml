<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="bottom|center_horizontal"
    android:orientation="horizontal"
    android:id="@+id/glanceView"
    android:tag="glanceCompoundButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    app:glance_isTopLevelLayout="true"
    style="@style/Glance.AppWidget.RadioButton">
    <ViewStub
        android:id="@+id/radioIcon"
        android:layout="@layout/glance_radio_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"/>
    <ViewStub
        android:id="@+id/radioText"
        android:layout="@layout/glance_radio_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>
