<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/ref_radius_full"/>
            <solid android:color="?attr/AssemblySunset400"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/ref_radius_full"/>
            <solid android:color="?attr/AssemblyGray500"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/ref_radius_full"/>
            <solid android:color="?attr/AssemblySunset400"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/ref_radius_full"/>
            <solid android:color="?attr/AssemblyTwilight500"/>
        </shape>
    </item>
</selector>
