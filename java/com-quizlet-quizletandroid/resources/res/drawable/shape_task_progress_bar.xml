<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <size
                android:height="@dimen/ref_spacing_small"
                android:width="@dimen/ref_spacing_small"/>
            <corners android:radius="@dimen/ref_radius_medium"/>
            <solid android:color="?attr/TaskProgressBarBackgroundColor"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale
            android:scaleWidth="100%"
            android:useIntrinsicSizeAsMinimum="true">
            <shape>
                <solid android:color="?attr/AssemblyGreen300"/>
                <size
                    android:height="@dimen/ref_spacing_small"
                    android:width="@dimen/ref_spacing_small"/>
                <corners android:radius="@dimen/ref_radius_medium"/>
                <stroke
                    android:width="2dp"
                    android:color="?attr/AssemblyGray100"/>
            </shape>
        </scale>
    </item>
</layer-list>
