<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="?attr/AssemblyProgressBarBackground"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <solid android:color="?attr/AssemblyProgressBarProgress"/>
                <corners
                    android:topRightRadius="@dimen/ref_radius_medium"
                    android:bottomRightRadius="@dimen/ref_radius_medium"/>
            </shape>
        </scale>
    </item>
</layer-list>
